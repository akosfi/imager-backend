{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es6",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}